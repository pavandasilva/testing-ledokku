{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "compileOnSave": true,
    "include": [
      "src/**/*.ts"
    ]
  }
  